{"ast":null,"code":"import axios from 'axios';\nimport { toast } from 'bulma-toast';\nexport default {\n  name: 'Product',\n\n  data() {\n    return {\n      product: {},\n      quantity: 1\n    };\n  },\n\n  methods: {\n    async getProduct() {\n      this.$store.commit('setIsLoading', true);\n      const category_slug = this.$route.params.category_slug;\n      const product_slug = this.$route.params.product_slug;\n      await axios.get(`api/v1/products/${category_slug}/${product_slug}`).then(response => {\n        this.product = response.data;\n      }).catch(err => {\n        console.log(err);\n      });\n      this.$store.commit('setIsLoading', false);\n    },\n\n    addToCart() {\n      if (isNaN(this.quantity) || this.quantity < 0) {\n        this.quantity = 1;\n      } //else\n\n\n      const item = {\n        product: this.product,\n        quantity: this.quantity\n      };\n      this.$store.commit('addToCart', item);\n      toast({\n        message: 'The product was added to the cart successfully',\n        type: 'is-success',\n        dismissible: true,\n        pauseOnHover: true,\n        duration: 2000,\n        position: 'bottom-right'\n      });\n    }\n\n  },\n\n  created() {\n    this.getProduct();\n  }\n\n};","map":{"version":3,"mappings":"AA2BI,OAAOA,KAAP,MAAkB,OAAlB;AACA,SAASC,KAAT,QAAsB,aAAtB;AAEA,eAAc;EACVC,IAAI,EAAC,SADK;;EAEVC,IAAI,GAAE;IACF,OAAM;MACFC,OAAO,EAAC,EADN;MAEFC,QAAQ,EAAC;IAFP,CAAN;EAIH,CAPS;;EAQVC,OAAO,EAAC;IACJ,MAAMC,UAAN,GAAkB;MACd,KAAKC,MAAL,CAAYC,MAAZ,CAAmB,cAAnB,EAAkC,IAAlC;MAEA,MAAMC,aAAY,GAAI,KAAKC,MAAL,CAAYC,MAAZ,CAAmBF,aAAzC;MACA,MAAMG,YAAW,GAAI,KAAKF,MAAL,CAAYC,MAAZ,CAAmBC,YAAxC;MACA,MAAMb,KAAK,CAACc,GAAN,CAAW,mBAAkBJ,aAAc,IAAGG,YAAa,EAA3D,EACDE,IADC,CACKC,QAAD,IAAY;QACd,KAAKZ,OAAL,GAAeY,QAAQ,CAACb,IAAxB;MACH,CAHC,EAIDc,KAJC,CAIMC,GAAD,IAAO;QACVC,OAAO,CAACC,GAAR,CAAYF,GAAZ;MACH,CANC,CAAN;MAOA,KAAKV,MAAL,CAAYC,MAAZ,CAAmB,cAAnB,EAAkC,KAAlC;IACH,CAdG;;IAeJY,SAAS,GAAE;MACP,IAAGC,KAAK,CAAC,KAAKjB,QAAN,CAAL,IAAwB,KAAKA,QAAL,G